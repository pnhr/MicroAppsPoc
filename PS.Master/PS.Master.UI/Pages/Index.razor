@page "/"
@inject IAppManagerServiceHandler appMangerServiceHandler

<PageTitle>Index</PageTitle>

<div class="container">
    <div class="row">
        @if (DeployedApps == null)
        {
            <div class="col-12">
                <span class="text-primary">Please wait while fetching application..</span>
            </div>
        }
        else if (DeployedApps.Count <= 0)
        {
            <div class="col-12">
                <h5 class="text-danger">No Deployed Applications were found.</h5>
            </div>
        }
        else
        {
            foreach(var app in DeployedApps)
            {
                <div class="col-3">
                    <a href="@app.AppUrl" style="cursor:pointer" target="_blank">
                        <PsCard ImgSrc="@String.Format("data:image/gif;base64,{0}", app.AppLogo)" Header="@app.AppDisplayName" Discription="@app.AppDiscription" />
                    </a>
                </div>
            }
        }
    </div>
</div>

